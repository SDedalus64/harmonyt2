{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": "./",
    "paths": {
      "expo*": [
        "node_modules/expo/*"
      ],
      "react-native*": [
        "node_modules/react-native/*"
      ],
      "@react-navigation/*": [
        "node_modules/@react-navigation/*"
      ]
    }
  },
  "exclude": [
    "src/__tests__",
    "**/*.test.ts"
  ],
  "extends": "expo/tsconfig.base"
}
