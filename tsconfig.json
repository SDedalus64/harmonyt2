{
  "extends": "./node_modules/expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "expo*": ["node_modules/expo/*"],
      "react-native*": ["node_modules/react-native/*"],
      "@react-navigation/*": ["node_modules/@react-navigation/*"]
    },
    "types": ["expo", "react", "react-native"]
  }
}
